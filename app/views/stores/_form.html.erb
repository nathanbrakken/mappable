<%= form_for @store, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2>Whoops. There were <%= pluralize(@store.errors.count, "error") %> on this page:</h2>

      <ul>
      <% @store.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :x_coord, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :x_coord, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :y_coord, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :y_coord, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :brand, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :brand_id, Brand.find(:all), :id, :name, :prompt => "Select a Brand" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :status_id, Status.find(:all), :id, :name, :prompt => "Select a Status" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :store_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :store_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :square_footage, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :square_footage, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                stores_path, :class => 'btn' %>
  </div>
<% end %>
